<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/cars/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table id="list">
    <thead>
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <% cars.forEach(car => { %>
        <tr>
          <td><%= car.title %></td>
          <td><%= car.model %></td>
          <td><a href="/cars/<%= car._id %>">DETAILS</a></td>
          <td>
            <% if (user) { %>
            <% if (car.owner?.equals(user?.profile._id)) { %>
              <form action="/cars/<%= car._id %>?_method=DELETE" method="POST">
                <button class="btn" type="submit">Delete</button>
              </form>
            <% } %>
          <% } %>
           
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>